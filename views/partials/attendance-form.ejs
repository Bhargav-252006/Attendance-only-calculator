<div class="form-group">
    <label for="totalClasses">Total Classes Held</label>
    <div class="input-group">
        <input type="number" id="totalClasses" placeholder="e.g., 100" required>
    </div>
</div>

<div class="form-group">
    <label for="presentClasses">Classes Attended</label>
    <div class="input-group">
        <input type="number" id="presentClasses" placeholder="e.g., 75" required>
    </div>
</div>

<div class="form-group">
    <label for="requiredPercentage">Required Attendance Percentage</label>
    <div class="input-group">
        <input type="number" id="requiredPercentage" placeholder="e.g., 75" step="0.1" required>
    </div>
</div>

<div class="form-group">
    <label for="lastDayIndex">Last Updated Day</label>
    <div class="input-group">
        <input type="number" id="lastDayIndex" placeholder="0=Mon, 5=Sat" min="0" max="5" required>
    </div>
</div>

<div class="fieldset" id="classScheduleSection" style="border: 1px solid #333; padding: 18px; border-radius: 6px; background-color: #ffffff; margin-bottom: 20px; box-shadow: 0 2px 8px rgba(0,0,0,0.15);">
    <div class="fieldset-title" style="font-size: 1.1rem; color: #ffffff; font-weight: 600; margin-bottom: 15px; padding: 8px 16px; background-color: #2c3e50; border-radius: 4px; text-align: center;">
        Classes Per Day
    </div>
    <div style="margin: 0 0 15px; font-size: 0.9em; color: #333; background-color: #f2f2f2; padding: 10px; border-left: 3px solid #5d3fd3; border-radius: 0 4px 4px 0;">
        <strong>Note:</strong> Enter the number of classes per day in your schedule. These values will be used to calculate required attendance.
    </div>
    <div class="days-grid" style="background-color: white; padding: 15px; border-radius: 4px; border: 1px solid #ddd; display: grid; grid-template-columns: repeat(auto-fill, minmax(150px, 1fr)); gap: 15px;">
        <% 
        const days = [
            { id: 'classesMonday', name: 'Monday', defaultValue: 7 },
            { id: 'classesTuesday', name: 'Tuesday', defaultValue: 7 },
            { id: 'classesWednesday', name: 'Wednesday', defaultValue: 7 },
            { id: 'classesThursday', name: 'Thursday', defaultValue: 7 },
            { id: 'classesFriday', name: 'Friday', defaultValue: 7 },
            { id: 'classesSaturday', name: 'Saturday', defaultValue: 7 }
        ];
        %>
        <% days.forEach(day => { %>
            <div class="day-input" style="border: 1px solid #ddd; padding: 10px; border-radius: 4px; background-color: #f8f8f8;">
                <label for="<%= day.id %>" style="font-weight: 600; color: #333; margin-bottom: 5px; display: block;"><%= day.name %></label>
                <input type="number" id="<%= day.id %>" value="<%= day.defaultValue %>" min="0" required style="background-color: #fff; border: 1px solid #ccc; color: #333; font-weight: 500; width: 100%; text-align: center; padding: 8px 0;">
            </div>
        <% }); %>
    </div>
</div>

<button id="calculateBtn">
    <span id="btnText">Calculate Attendance</span>
    <span id="btnSpinner" class="spinner" style="display: none;"></span>
</button>

<div id="errorOutput" class="error-message"></div> 